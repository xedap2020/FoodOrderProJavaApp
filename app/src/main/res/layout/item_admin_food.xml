<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/define_dimen_10"
    android:layout_marginEnd="@dimen/define_dimen_10">

    <LinearLayout
        android:id="@+id/layout_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/define_dimen_5"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/layout_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/define_dimen_5"
                app:cardCornerRadius="@dimen/define_dimen_6">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/define_dimen_80">

                    <ImageView
                        android:id="@+id/img_food"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/image_no_available"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/tv_sale_off"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/define_dimen_10"
                        android:background="@color/colorPrimary"
                        android:padding="@dimen/define_dimen_2"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_xxsmall"
                        android:textStyle="bold" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/define_dimen_5"
                android:layout_marginEnd="@dimen/define_dimen_5"
                android:layout_toEndOf="@+id/layout_image"
                android:layout_toStartOf="@+id/layout_button"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_food_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/text_size_normal"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/define_dimen_2"
                    android:textColor="@color/textColorSecondary"
                    android:textSize="@dimen/text_size_xsmall"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_price_sale"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/define_dimen_2"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_small"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/define_dimen_2"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_popular"
                        android:textColor="@color/textColorSecondary"
                        android:textSize="@dimen/text_size_small" />

                    <TextView
                        android:id="@+id/tv_popular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/define_dimen_5"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="@dimen/text_size_small" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/define_dimen_5"
                    android:src="@drawable/ic_edit"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/img_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/define_dimen_10"
                    android:padding="@dimen/define_dimen_5"
                    android:src="@drawable/ic_delete"
                    tools:ignore="ContentDescription" />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_food_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/define_dimen_5"
            android:text="@string/app_name"
            android:ellipsize="end"
            android:maxLines="3"
            android:textColor="@color/textColorSecondary"
            android:textSize="@dimen/text_size_small" />

    </LinearLayout>

</androidx.cardview.widget.CardView>

